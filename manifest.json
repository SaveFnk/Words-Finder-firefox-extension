{
    "manifest_version": 2,
    "name": "Words Finder",
    "version": "0.11",
    "description": "select the text and find the meaning",
    "homepage_url": "https://github.com/tramber30/select_trad_fire",
  
    "background": {
            "scripts": ["select_trad.js"]
    },
    
    "content_scripts": [{
            "matches": ["<all_urls>"],
            "js": ["send_selection.js"]
    }],

    "permissions": [
            "contextMenus",
            "activeTab",
            "tabs"
    ], 
    "icons": {
            "96": "images/icon_96.png",
            "64": "images/icon_64.png",
            "48": "images/icon_48.png"
    }

} 